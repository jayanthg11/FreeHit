<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_3sdp"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp"
        android:textAllCaps="true"
        tools:text="CHRIS GAYLE" />

    <TextView
        android:id="@+id/player_out_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_18sdp"
        android:paddingStart="@dimen/_20sdp"
        android:textSize="@dimen/_10sdp"
        tools:text="c Liam Plunkett b Tom Curran" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/cell_shape"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/_8sdp"
        android:paddingStart="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_5sdp">


        <TextView
            android:id="@+id/FourLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_2sdp"
            android:text="4 * "
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/FourValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp"
            tools:text="1" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/SixLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="6 * "
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/SixValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp"
            tools:text="5" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/DotLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="D* "
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/DotValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp"
            tools:text="5" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/RunsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="R : "
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/RunsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp"
            tools:text="40" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/BallsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="B : "
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/BallsValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp"
            tools:text="29" />

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/StrikeRateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="SR : "
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp" />

        <TextView
            android:id="@+id/StrikeRateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_8sdp"
            tools:text="137.93" />


    </LinearLayout>


</LinearLayout>

